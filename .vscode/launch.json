  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "cli-service",
      "program": "${workspaceFolder}/packages/cli-service/bin/fuc-cli-service.js",
      "args": ["serve", "--open"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Yeoman generator",
      "program": "/usr/local/lib/node_modules/yo/lib/cli.js",
      "args": ["fucapp"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "启动程序",
      "program": "${workspaceFolder}/packages/cli/bin/fuc.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "args": ["new", "app", "-t", "fucapp"]
    }
  ]
}
